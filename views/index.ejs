<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Here is the current Inventory Data</h2>
    <dt>
      <h3>
        Categories:
      </h3>
      <p>
        <%= data.category_count %>
      </p>
      <h3>
        Total Items in Inventory:
      </h3>
      <p>
        <%= data.item_count %>
      </p>
      <h4>
        Pick a Category to View:
      </h4>
      <ul>
        <% if (categories) { %>
          <% categories.forEach((category) => { %>
            <li>
              <a href="<%= category.url %>"><%= category.name %></a>
            </li>
          <% }); %>
        <% }; %>
      </ul>
      
    </dt>
    
  </body>
</html>
