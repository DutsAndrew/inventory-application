<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale="1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <a href="/inventory">
      <button class="return-to-main-btn" href="">
        Return To Main
      </button>
    </a>

    <h1><%= title %></h1>

    <form method="POST" action="">

      <div class="form-group">
        <label for="name">
          Name:
        </label>
        <input 
          id="form-control" 
          type="text" 
          placeholder="Beans, Roasts, Espresso, etc"
          name="name"
          required
          value="<%= typeof(item) === 'undefined' ? '' : item.name %>"
        >
      </div>

      <div class="form-group">
        <label for="description">
          Description:
        </label>
        <textarea 
          id="form-control" 
          type="text" 
          placeholder="Permanent stainless steel filter so that there's no need to..."
          name="description"
          required
        >
          <%= typeof(item) === 'undefined' ? '' : item.description %>
        </textarea>
      </div>

      <div class="form-group">
        <label for="quantity">
          Quantity:
        </label>
        <input 
          id="form-control" 
          type="text" 
          placeholder="105"
          name="quantity"
          required
          value="<%= typeof(item) === 'undefined' ? '' : item.quantity %>"
        >
      </div>

      <div class="form-group">
        <label for="cost">
          Cost:
        </label>
        <input 
          id="form-control" 
          type="text" 
          placeholder="19.99"
          name="cost"
          required
          value="<%= typeof(item) === 'undefined' ? '' : item.cost %>"
        >
      </div>

      <div class="form-group">
        <label>
          Categories:
        </label>
        <div>
          <% categories.forEach((category) => { %>
            <div>
              <input
                type="checkbox"
                name="category"
                id="<%= category._id %>"
                value="<%= category._id %>"
                checked="<%= category.checked %>"
              >
              <label for="<%= category._id %>">
                <%= category.name %>
              </label>
            </div>
          <% }); %>
        </div>

      <button class="btn, btn-primary" type="submit">
        Submit
      </button>
    </form>

    <% if (typeof(errors) !== "undefined") { %>
      <ul>
        <% errors.forEach((error) => { %>
          <li>
            <%= error.msg %>
          </li>
        <% }); %>
      </ul>
    <% }; %>

  </body>
</html>